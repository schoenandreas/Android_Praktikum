<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="match_parent"
android:orientation="vertical">
<!--android:background="@color/colorAccent50" Ganzer Hintergrund-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:elevation="8dp">

        <Switch
            android:id="@+id/btSwitch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="40dip"
            android:paddingTop="4dip"
            android:text="Bluetooth Pairing"
            android:textColor="#020202"
            android:textSize="16dp"
            android:textStyle="bold"
            android:checked="true"
            android:theme="@style/SCBSwitch" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btSwitchItem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="5dp"
            android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
            android:paddingTop="5dp"
            android:textSize="14sp"
            android:text="This device is not paired."/>
    </LinearLayout>

    <!-- Dark Line for seperation of content-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/lbListImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/arm0"
            android:fitsSystemWindows="true" />

        <!-- Dark Line for seperation of content-->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black"/>

        <ExpandableListView
            android:id="@+id/lvExp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"/>
    </LinearLayout>
</LinearLayout>